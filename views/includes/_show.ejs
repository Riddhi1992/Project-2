<% for(var i=0; i<posts.length; i++) { %>
  <tr>
    <td><%= i + 1 %></td>
    <td><%= posts[i].title %></td>
    <td><%= posts[i].author %></td>
    <td><%= posts[i].desc %></td>
    <td>
      <a
        href="/update-review?id=<%= posts[i]._id%>"
        class="btn border shadow update"
      >
        <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
      </a>
      <a class="btn border shadow delete" data-id="<%= posts[i]._id%>">
        <span class="text-gradient"><i class="fas fa-times"></i></span>
      </a>
    </td>
  </tr>
  <% } %>
</posts.length;>
